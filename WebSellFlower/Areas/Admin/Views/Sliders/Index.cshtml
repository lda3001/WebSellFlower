@model IEnumerable<WebSellFlower.Models.TblSlider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card card-body py-3">
    <div class="row align-items-center">
        <div class="col-12">
            <div class="d-sm-flex align-items-center justify-space-between">
                <h4 class="mb-4 mb-sm-0 card-title">Slide</h4>
                <nav aria-label="breadcrumb" class="ms-auto">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item d-flex align-items-center">
                            <a class="text-muted text-decoration-none d-flex" href="index.html">
                                <iconify-icon icon="solar:home-2-line-duotone" class="fs-6"></iconify-icon>
                            </a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">
                            <span class="badge fw-medium fs-2 bg-primary-subtle text-primary">
                                 Shop Slider
                            </span>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="Menu-list">
    <div class="card">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center gap-6 mb-9">
                <form class="position-relative">
                    <input type="text" class="form-control search-chat py-2 ps-5" id="text-srh" placeholder="Search Slide">
                    <i class="ti ti-search position-absolute top-50 start-0 translate-middle-y fs-6 text-dark ms-3"></i>
                </form>
                
                <a class="fs-6 text-muted" href="javascript:void(0)" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Filter list">
                    <i class="ti ti-filter"></i>
                </a>

            </div>
            <div class="table-responsive border rounded">
                <table class="table align-middle text-nowrap mb-0">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Ảnh</th>
                            <th scope="col">SliderOnPage</th>
                            <th scope="col">SliderDate</th>
                            <th scope="col">Page</th>
                            <th scope="col">Trạng Thái</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>
                                    <img src="@item.SliderImg" alt="Slider Image" class="img-fluid" style="max-width: 100px;" />
                                </td>
                                <td>@Html.DisplayFor(m => item.SliderOnPage)</td>
                                <td>@Html.DisplayFor(m => item.SliderDate)</td>
                                <td>@Html.DisplayFor(m => item.PageId)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.SliderImg))
                                    {
                                        <div class="d-flex align-items-center">
                                            <span class="text-bg-success p-1 rounded-circle"></span>
                                            <p class="mb-0 ms-2">Active</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <span class="text-bg-danger p-1 rounded-circle"></span>
                                            <p class="mb-0 ms-2">Inactive</p>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.SliderId})"><iconify-icon icon="heroicons-outline:pencil-square" class="fs-7"></iconify-icon></a> |

                                    <a href="@Url.Action("Delete", new { id =item.SliderId })"> <iconify-icon icon="heroicons-outline:trash" class="fs-7"></iconify-icon></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex align-items-center justify-content-end py-1">
                    <p class="mb-0 fs-2">Rows per page:</p>
                    <select class="form-select w-auto ms-2 me-4 py-1 border-0" aria-label="Rows per page">
                        <option selected>5</option>
                        <option value="10">10</option>
                        <option value="25">25</option>
                    </select>
                    <p class="mb-0 fs-2">1–5 of 12</p>
                    <nav aria-label="Pagination">
                        <ul class="pagination justify-content-center mb-0 ms-4">
                            <li class="page-item p-1">
                                <a class="page-link border-0 rounded-circle text-dark fs-6 d-flex align-items-center justify-content-center" href="javascript:void(0)">
                                    <i class="ti ti-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item p-1">
                                <a class="page-link border-0 rounded-circle text-dark fs-6 d-flex align-items-center justify-content-center" href="javascript:void(0)">
                                    <i class="ti ti-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

